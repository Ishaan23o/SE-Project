					<label for="exampleInputFile">
					upload a brochure(if any)
					</label>
					<input type="file" class="form-control-file" id="exampleInputFile">
				</div>
				<button type="submit" class="btn btn-primary">
					Submit
				</button>
			</form>
		</div>
